# Define variables
PROTOC=protoc
PROTO_SRC=message
PROTO_OUT_DIR=./../proto-gen

# Plugins
PROTOC_GEN_GO = $(shell go env GOPATH)/bin/protoc-gen-go
PROTOC_GEN_GO_GRPC = $(shell go env GOPATH)/bin/protoc-gen-go-grpc

# Targets
all: generate

# Generate Go and gRPC code from proto file
.PHONY: generate
generate:
	protoc --proto_path=./proto/ --go_out=./proto-gen --go-grpc_out=./proto-gen --grpc-gateway_out=./proto-gen --grpc-gateway_out=allow_delete_body=true:. ./**/message.proto

# Clean generated files
clean:
	rm -rf $(PROTO_OUT_DIR)

# Install required plugins
install:
	go install google.golang.org/protobuf/cmd/protoc-gen-go@latest
	go install google.golang.org/grpc/cmd/protoc-gen-go-grpc@latest

