# Define variables
PROTOC=protoc
PROTO_SRC=message
PROTO_OUT_DIR=./../proto-gen

# Plugins
PROTOC_GEN_GO = $(shell go env GOPATH)/bin/protoc-gen-go
PROTOC_GEN_GO_GRPC = $(shell go env GOPATH)/bin/protoc-gen-go-grpc

# Targets
all: generate

# Generate Go and gRPC code from proto file
.PHONY: generate
generate:
	protoc --proto_path=./proto/ --go_out=./ --go-grpc_out=./ --grpc-gateway_out=./ --grpc-gateway_out=allow_delete_body=true:. ./**/message.proto

.PHONY: lint-install
lint-install:
	go install github.com/golangci/golangci-lint/cmd/golangci-lint@v1.63.4

.PHONY: lint
lint:
	golangci-lint run --exclude-generated --skip-dirs ./proto-gen 

.PHONY: fmt
fmt:
	go fmt ./...

# Clean generated files
clean:
	rm -rf $(PROTO_OUT_DIR)

.PHONY: run
run:
	go run ./cmd/app/main.go

# Install required plugins
install:
	go install google.golang.org/protobuf/cmd/protoc-gen-go@latest
	go install google.golang.org/grpc/cmd/protoc-gen-go-grpc@latest

